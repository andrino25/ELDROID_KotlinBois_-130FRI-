<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:background="@drawable/spider_button_bg">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/spider_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200dp"
            app:shapeAppearanceOverlay="@style/SemiCircularImageViewStyle"
            android:layout_marginBottom="@dimen/_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/spider_sample_img" />

        <TextView
            android:id="@+id/spider_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spider_image"
            android:text="@string/goliath_birdeater"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/spider_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spider_breed"
            android:fontFamily="@font/standard"
            android:text="@string/one_of_the_largest_spider_species_in_the_world_known_for_its_impressive_size_and"
            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>