<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.ProfileFragment"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/profileHeaderContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/profileHeader"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/profile"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:fontFamily="@font/medium"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@color/maroon"/>

        <RelativeLayout
            android:id="@+id/profileContainer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/profileHeader"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="16dp">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:src="@drawable/img_pfp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/profileName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/profileImage"
                android:text="John Doe"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/profileEmail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/profileName"
                android:text="johndoe@gmail.com"
                android:fontFamily="@font/standard"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editProfileButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/profileContainer"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#d9d9d9"
            android:background="@drawable/bg_profile_button"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/editProfileIcon"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_edit_profile"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/editProfileLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="My Profile"
                android:fontFamily="@font/standard"
                android:layout_toEndOf="@+id/editProfileIcon"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/helpCenterButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/editProfileButton"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#d9d9d9"
            android:background="@drawable/bg_profile_button"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/helpCenterIcon"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_help_center"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/helpCenterLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Help Center"
                android:fontFamily="@font/standard"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/helpCenterIcon"
                android:textColor="@color/black"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/logoutButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/maroon"
            android:background="@drawable/bg_profile_button"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/logoutIcon"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_logout"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/logoutLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Logout"
                android:fontFamily="@font/standard"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/logoutIcon"
                android:textColor="@color/white"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>