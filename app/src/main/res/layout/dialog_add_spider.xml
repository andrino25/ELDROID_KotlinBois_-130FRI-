<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/_300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/maroon"
        android:padding="@dimen/_16dp">

        <ImageButton
            android:id="@+id/i_close_btn"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close_btn_white" />

        <TextView
            android:id="@+id/dialog_spider_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_close_btn"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/medium"
            android:singleLine="true"
            android:text="@string/add_new_spider"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_spider_txt"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/dialog_spider_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:background="@drawable/spider_white_container_box"
                    android:fontFamily="@font/standard"
                    android:hint="@string/name"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sp" />

                <Spinner
                    android:id="@+id/dialog_spider_health"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/spider_white_container_box"
                    android:paddingHorizontal="@dimen/_15dp" />

                <Spinner
                    android:id="@+id/dialog_spider_size"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/spider_white_container_box"
                    android:paddingHorizontal="@dimen/_15dp" />

                <EditText
                    android:id="@+id/dialog_spider_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/spider_white_container_box"
                    android:fontFamily="@font/standard"
                    android:hint="Estimated Market Value"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sp" />

                <EditText
                    android:id="@+id/dialog_spider_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/spider_white_container_box"
                    android:fontFamily="@font/standard"
                    android:hint="Description"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:textSize="@dimen/_14sp" />

                <RelativeLayout
                    android:id="@+id/dialog_spider_desc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/spider_white_container_box"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/add_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_add_image_icon" />

                    <TextView
                        android:id="@+id/add_image_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_image_view"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/medium"
                        android:text="@string/add_image"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/dialog_add_spiderBtn"
                    style="@style/WhiteButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_50dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:fontFamily="@font/medium"
                    android:text="@string/add"
                    android:textColor="@color/maroon"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>