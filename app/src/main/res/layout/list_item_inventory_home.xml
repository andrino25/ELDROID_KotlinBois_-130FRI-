<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">


        <ImageView
            android:id="@+id/inventory_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/spider_sample_img" />

        <TextView
            android:id="@+id/inventory_spider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Spider"
            android:layout_toRightOf="@id/inventory_image"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/inventory_spider_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:layout_below="@id/inventory_spider_name"
            android:textColor="@color/green"
            android:layout_toRightOf="@id/inventory_image"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/inventory_dots"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_three_dots"/>

    </RelativeLayout>


</RelativeLayout>