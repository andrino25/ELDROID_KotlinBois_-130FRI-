<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spider_item_home">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/inventory_image"
            android:layout_width="@dimen/_45dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/SemiCircularImageViewStyle"
            android:src="@drawable/img_spider_placeholder" />

        <TextView
            android:id="@+id/inventory_spider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_text"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_14sp"
            android:layout_toEndOf="@id/inventory_image"
            android:layout_marginTop="@dimen/_15dp"/>

        <TextView
            android:id="@+id/inventory_spider_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active"
            android:textSize="@dimen/_12sp"
            android:layout_marginTop="@dimen/_n4dp"
            android:layout_below="@id/inventory_spider_name"
            android:textColor="@color/green"
            android:fontFamily="@font/standard"
            android:layout_toEndOf="@id/inventory_image"/>

        <ImageView
            android:id="@+id/inventory_dots"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10dp"
            app:tint="@color/maroon"
            android:src="@drawable/ic_open"/>
    </RelativeLayout>
</RelativeLayout>