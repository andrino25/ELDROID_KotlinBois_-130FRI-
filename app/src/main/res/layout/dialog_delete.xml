<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="325dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:background="@color/maroon"
        android:padding="@dimen/_16dp">

        <ImageButton
            android:id="@+id/i_close_btn"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close_btn_white" />

        <TextView
            android:id="@+id/dialog_spider_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:fontFamily="@font/medium"
            android:singleLine="true"
            android:layout_below="@+id/i_close_btn"
            android:text="@string/delete_this_spider"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sp"
            android:fontFamily="@font/standard"
            android:layout_below="@+id/dialog_spider_txt"
            android:gravity="center"
            android:text="@string/are_you_sure_you_want_to_delete_this_spider"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_DeleteSpider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteButtonStyle"
            android:text="@string/delete"
            android:fontFamily="@font/medium"
            android:layout_below="@id/txt1"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginHorizontal="@dimen/_30dp"
            android:textColor="@color/maroon"
            android:layout_marginBottom="@dimen/_30dp"
            />


    </RelativeLayout>

</RelativeLayout>