<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Dashboard.EditProfilePage">
    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maroon"
        android:paddingTop="@dimen/_16dp"
        android:paddingBottom="@dimen/_10dp"
        android:paddingRight="@dimen/_16dp"
        android:paddingLeft="@dimen/_16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/_22dp"
            android:layout_height="@dimen/_22dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/medium"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/imageContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/headerContainer"
        android:layout_margin="@dimen/_32dp">
        <ImageView
            android:id="@+id/userProfilePicRef"
            android:layout_height="@dimen/_150dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_pfp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/userInfoContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageContainer"
        android:layout_marginRight="@dimen/_32dp"
        android:layout_marginLeft="@dimen/_32dp">
        <TextView
            android:id="@+id/firstNameLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_16sp"
            android:text="@string/first_name"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/firstNameET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit_text"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/standard"
            android:hint="@string/first_name"
            android:padding="@dimen/_8dp"
            android:layout_below="@+id/firstNameLabel"/>
        <TextView
            android:id="@+id/middleNameLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_8dp"
            android:text="@string/middle_name"
            android:layout_below="@+id/firstNameET"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/middleNameET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit_text"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/standard"
            android:hint="@string/middle_name"
            android:padding="@dimen/_8dp"
            android:layout_below="@+id/middleNameLabel"/>
        <TextView
            android:id="@+id/lastNameLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_8dp"
            android:text="@string/last_name"
            android:layout_below="@+id/middleNameET"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/lastNameET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit_text"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/standard"
            android:hint="@string/last_name"
            android:padding="@dimen/_8dp"
            android:layout_below="@+id/lastNameLabel"/>
        <TextView
            android:id="@+id/addressLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_8dp"
            android:text="@string/address"
            android:layout_below="@+id/lastNameET"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/addressET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit_text"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/standard"
            android:hint="@string/address"
            android:padding="@dimen/_8dp"
            android:layout_below="@+id/addressLabel"/>
    </RelativeLayout>
</RelativeLayout>